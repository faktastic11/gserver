{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "target": "es6",
    "resolveJsonModule": true,
    "outDir": "./built",
    "rootDir": "./src",
    "baseUrl": "./src",
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", ".eslintrc", ".prettierrc"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}
